@model IEnumerable<PMWelfare.Models.Celebrant>

@{
    ViewBag.Title = "Celebrants";
}

<h2 style="text-align:center">List of Celebrants</h2>

<p>
    @Html.ActionLink("Add a celebrant", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Celebration.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Member.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Celebration.EventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Member.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CelebId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CelebId }) |
            
        </td>
    </tr>
}

</table>
