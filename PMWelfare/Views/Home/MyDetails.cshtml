    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                Deposits
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <table id="myDataTable1" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>UserName</th>
                                        <th>Deposited At</th>
                                        <th>Amount</th>

                                    </tr>
                                </thead>
                            </table>

                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->

        </div>
        <div class="col-lg-4">

            <div class="panel panel-info">
                <div class="panel-heading">
                    Subscriptions
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table id="myDataTable2" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>UserName</th>
                                        <th>Month</th>
                                        <th>Amount</th>
                                        <th>Year</th>
                                    </tr>
                                </thead>
                            </table>


                        </div>
                    </div>

                </div>
                <div class="panel-footer">
                    <h3><sup>TotalSubscriptions</sup></h3>
                    <p>
                        


                    </p>
                </div>


            </div>
        </div>
        <div class="col-lg-4">

            <div class="panel panel-info">
                <div class="panel-heading">
                   Benefits
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table id="myDataTable" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>EventName</th>

                                    </tr>
                                </thead>
                            </table>



                        </div>
                    </div>

                </div>
                <div class="panel-footer">
                    <h3><sup>TotalSubscriptions</sup></h3>
                    <p></p>
                   
                </div>


            </div>
        </div>

    </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

<!-- /#page-wrapper --> 
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/js/jquery.dataTables.min.js"></script>
<script>
 $(document).ready(function ()
        {
            $("#myDataTable1").DataTable({
                "processing": false, // for show progress bar
                "serverSide": true, // for process server side
                "filter": false, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/Home/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": true
                }],
                "columns": [
                    { "data": "UserName", "name": "UserName", "autoWidth": true },
                    {
                        "data": "CreatedAt", "DateTime": "Deposited At", "autoWidth": true,
                        "render": function (value) {
                            if (value === null) return "";
                            var pattern = /Date\(([^)]+)\)/;//date format from server side
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return dt.getDate() + "/" + (dt.getMonth() + 1) + "/" + dt.getFullYear();
                        }
                    },
                    { "data": "Amount", "name": "Amount", "autoWidth": true }

                ]

     });
            $("#myDataTable2").DataTable({
                "processing": false, // for show progress bar
                "serverSide": true, // for process server side
                "filter": false, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/Home/SubData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": true
                }],
                "columns": [
                    { "data": "UserName", "name": "UserName", "autoWidth": true },
                    {
                        "data": "SubMonth", "int": "Month", "autoWidth": true,
                        
                    },
                    { "data": "Amount", "name": "Amount", "autoWidth": true },
                    { "data": "SubYear", "name": "Year", "autoWidth": true }

                ]

            });

        });

</script>