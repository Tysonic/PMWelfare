@model IEnumerable<PMWelfare.Models.EventType>

@{
    ViewBag.Title = "Index";
}
<div>
    <ol class="breadcrumb">
        <li> @Html.ActionLink("Home", "Index", "Home")</li>
        <li class="active"> @Html.ActionLink("Event Types", "Index", "EventTypes")</li>
        
    </ol>
</div>
<h2 style="text-align:center">List of event types</h2>
<p style="margin-left:20%">
    <button class="btn btn-info" onclick="location.href='@Url.Action("Create","EventTypes")'">
        Add New Event Type

    </button>
</p>


<table class="table table-bordered" style="width:60%; margin-left:20%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>

        <td style="width:20%">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
