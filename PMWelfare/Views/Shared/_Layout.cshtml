@using PMWelfare.Utilities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PM Welfare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css1/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Content/Chosen/chosen.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Suppliers
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class='@Html.IsActive("Suppliers", "Create")'>@Html.ActionLink("Add Supplier", "Create", "Suppliers")</li>
                            <li class='@Html.IsActive("SupProducts", "Create")'>@Html.ActionLink("Add Supplier Products", "Create", "SupProducts")</li>
                            <li class='@Html.IsActive("Suppliers", "Listsupplier")'>@Html.ActionLink("List Of Suppliers and Products", "Listsupplier", "Suppliers")</li>

                        </ul>
                    </li>
                    <!--dropdown Menu End-->
                    
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Events
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">

                            <li>@Html.ActionLink("Add Events Type", "Create", "EventTypes")</li>
                            <li>@Html.ActionLink(" Add New Event", "Create", "Celebrations")</li>
                            <li>@Html.ActionLink("EventProducts", "Create", "Expenses")</li>


                        </ul>
                    </li>
                    <!--dropdown Menu End-->

                    <li>@Html.ActionLink("Subscriptions", "Index", "Subscriptions")</li>

                    <li class='@Html.IsActive("Deposits", "Create")'>@Html.ActionLink("Deposits", "Create", "Deposits")</li>

                    <li class='@Html.IsActive("MonthlySummary", "Index")'>@Html.ActionLink("MonthlySummary", "index", "MonthlySummary")</li>
                    <li class='@Html.IsActive("Upload", "ImportExcel")'>@Html.ActionLink("File Upload", "ImportExcel", "Upload")</li>


                </ul>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Members
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a data-toggle="dropdown" href="#">  Member  <span class=""></span> </a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Add New Member", "Create", "Members")</li>
                                            <li>@Html.ActionLink("List of Members", "ShowGrid", "Members")</li>
                                        </ul>

                                    </li>
                                    <li>
                                        <a data-toggle="dropdown" href="#">  MemberStatus  <span class=""></span> </a>
                                        <ul class="dropdown-menu" id="next">
                                            <li>@Html.ActionLink("Add New MemberStatus", "Create", "MemberStatus")</li>
                                            <li>@Html.ActionLink("List of MemberStatuses", "Index", "MemberStatus")</li>
                                        </ul>

                                    </li>


                                </ul>
                            </li>
                            <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                            <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />


        <footer>

            <p>&copy; @DateTime.Now.Year - URA PMW_welfare</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/chosen.jquery.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/js/jquery.dataTables.js"></script>
</body>
</html>
