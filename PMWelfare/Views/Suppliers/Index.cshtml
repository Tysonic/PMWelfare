@model IEnumerable<PMWelfare.Models.Supplier>

@{
    ViewBag.Title = "Index";
}
<div>
    <ol class="breadcrumb">
        <li> @Html.ActionLink("Home", "Index", "Home")</li>
        <li class="active"> @Html.ActionLink("Suppliers", "Index")</li>

    </ol>
</div>
    </ol>
</div>    
<h2 style="text-align:center">List of suppliers</h2>

<p>
    <button class=" btn btn-info" onclick="location.href='@Url.Action("Create","Suppliers")'">
        Create New Supplier
    </button>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SupTel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SupTel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SupId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SupId })
        </td>
    </tr>
}

</table>
